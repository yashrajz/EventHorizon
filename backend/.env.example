# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/eventhorizon  // Local MongoDB URI

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here                // Replace with a strong secret key
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:8080

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com      // Use your Gmail address
SMTP_PASS=your_email_app_password  // Use an App Password for Gmail

# Email Logging
EMAIL_DEBUG=true

# Additional Configuration
# Add other environment variables as needed